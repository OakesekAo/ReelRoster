@using ReelRoster.Models.Database


@model List<Collection>

<div class="row">
    <div class="col-sm-10 col-md-8 text-center mx-auto bg-white">
        <h2 class="text-dark my-3 fredoka">Collections</h2>
        <table class="table table-dark">
            <thead>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
            </thead>
            <tbody>
                @foreach (var collection in Model)
                {
                    <tr>
                        <td>@collection.Name</td>
                        <td>@collection.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Collections" asp-route-id="" class="text-primary">Edit</a>
                            <a asp-action="Delete" asp-controller="Collections" asp-route-id="" class="text-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>