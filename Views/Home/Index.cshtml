@using ReelRoster.Models.ViewModels
@model LandingPageVM
@{
    ViewData["Title"] = "Reel Roster";
}

<style>
    .clapOverview {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @*  .clapTitle {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    h5.card.title {
        height: 2.5em;
    }*@
</style>

<section class="px-1">
        <div class="row">
            <span class="btn btn-lg w-100 btn-warning font-weight-bolder border-dark">UPCOMING</span>
        </div>
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">

                <div class="card-group">
                    @{
                        var classText = "active";
                        for (var slide = 0; slide <= 3; slide++)
                        {
                            <div class="carousel-item @classText">
                                <div class="row d-flex align-items-stretch">
                                    @foreach (var movie in Model.Upcoming.results.Skip(slide * 4).Take(4))
                                    {
                                        <div class="col-sm-3 mb-2">
                                            <div class="card h-100">
                                                <img src="@movie.poster_path" class="card-img-top d-block w-100" alt="..." />
                                                <div class="card-body" style="overflow: hidden">
                                                    <h5 class="card-title">@movie.title</h5>
                                                    <p class="card-text"> @movie.overview</p>
                                                </div>
                                                    <div class="card-footer">
                                                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id" class="btn w-100 font-weight-bold btn-warning">Details</a>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            classText = "";
                        }
                    }
                </div>
                @*                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
                </a>*@
            </div>
        </div>

    </div>
</section>


